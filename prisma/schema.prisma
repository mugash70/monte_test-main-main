generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Translation {
  id     Int    @id @default(autoincrement())
  locale String
  key    String
  value  String

  @@unique([locale, key], name: "locale_key")
}
